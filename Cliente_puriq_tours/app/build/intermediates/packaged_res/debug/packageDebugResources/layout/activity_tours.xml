                            <RatingBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="5"
                                android:rating="4"
                                android:stepSize="1"
                                android:isIndicator="true"
                                style="?android:attr/ratingBarStyleSmall"
                                android:progressTint="@color/teal_700"
