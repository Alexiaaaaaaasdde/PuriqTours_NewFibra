<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToursActivity">

    <!-- ðŸ”¹ Toolbar superior -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#009688"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:title="Puriq Tours"
        app:titleCentered="true"
        app:navigationIcon="@drawable/ic_menu"
        app:menu="@menu/top_app_bar_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Icono perfil en toolbar -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/imagen_perfil"
            android:scaleType="centerCrop"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="8dp"
            app:shapeAppearanceOverlay="@style/RoundedImage"
            app:strokeColor="@android:color/white"
            app:strokeWidth="2dp"/>
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- ðŸ”¹ Contenido con scroll -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#F8F9FA"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Barra de bÃºsqueda -->
            <EditText
                android:id="@+id/searchBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Buscar tours"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:background="@drawable/search_background"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="#888888"
                android:layout_marginBottom="12dp"/>

            <!-- NUEVO: SecciÃ³n "Mis lista de tours" con flecha -->
            <LinearLayout
                android:id="@+id/layoutMisListaTours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mis lista de tours"
                    android:textColor="#009688"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_forward"
                    android:contentDescription="Ver lista"
                    app:tint="#009688"/>
            </LinearLayout>

            <!-- Chips de filtros horizontales -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="16dp">


                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupFiltros"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:chipSpacingHorizontal="8dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipLima"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lima"
                        android:checkable="true"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="#009688"
                        app:chipStrokeWidth="1dp"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipCusco"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cusco"
                        android:checkable="true"
                        android:checked="true"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="#009688"
                        app:chipStrokeWidth="1dp"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipArequipa"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Arequipa"
                        android:checkable="true"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="#009688"
                        app:chipStrokeWidth="1dp"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipTumbes"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tumbes"
                        android:checkable="true"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="#009688"
                        app:chipStrokeWidth="1dp"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPiura"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Piura"
                        android:checkable="true"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="#009688"
                        app:chipStrokeWidth="1dp"/>

                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>

            <!-- BotÃ³n de filtro -->
            <Button
                android:id="@+id/btnFiltro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filtrar"
                android:backgroundTint="#009688"
                android:textColor="@android:color/white"
                android:layout_gravity="end"
                android:layout_marginBottom="16dp"/>

