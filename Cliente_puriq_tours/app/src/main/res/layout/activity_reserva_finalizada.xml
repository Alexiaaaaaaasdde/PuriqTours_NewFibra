<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="#009688"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
            app:title="Puriq Tours"
            app:titleCentered="true"
            app:navigationIcon="@drawable/ic_menu"
            app:menu="@menu/top_app_bar_menu"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Icono perfil en toolbar -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profileIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/imagen_perfil"
                android:scaleType="centerCrop"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="8dp"
                app:shapeAppearanceOverlay="@style/RoundedImage"
                app:strokeColor="@android:color/white"
                app:strokeWidth="2dp"/>
        </com.google.android.material.appbar.MaterialToolbar>



        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/topAppBar"
            app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="16dp"
            android:background="#F8F9FA">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <!-- Detalles -->

            <!-- ðŸ”¹ Bloque de Detalles con fondo box_bg -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/box_bg"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginBottom="16dp">
                <!-- TÃ­tulo -->
                <!-- ðŸ”¹ Flecha atrÃ¡s -->
                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_arrow_back"
                    android:contentDescription="Volver"
                    android:tint="@color/teal_700"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:id="@+id/tvTituloFinalizado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ciudadela de KuÃ©lap"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#2B746C"
                    android:layout_marginBottom="8dp" />

                <!-- Estado -->
                <TextView
                    android:id="@+id/tvEstadoFinalizado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado: Finalizado"
                    android:textSize="16sp"
                    android:textColor="#FF0000"
                    android:layout_marginBottom="12dp"/>

                <!-- Imagen -->
                <ImageView
                    android:id="@+id/imgTourFinalizado"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/kuelap"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="16dp"/>
                <TextView
                    android:text="Detalles de la reserva:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2B746C"
                    android:textStyle="bold"
                    android:textSize="1sp"/>

                <TextView
                    android:text="Fecha: Martes, 15 de Marzo de 2025"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:textColor="#2B746C"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:text="Personas: 2 personas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2B746C"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:text="Medio de pago: Tarjeta de crÃ©dito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2B746C"
                    android:textStyle="bold"
                    android:textSize="14sp"

                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:text="Costo total: S/. 600 soles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2B746C"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

                <!-- QR -->
                <ImageView
                    android:id="@+id/imgQRFinalizado"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/qr_real"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"/>

                <!-- BotÃ³n de valoraciÃ³n -->
                <Button
                    android:id="@+id/btnValorar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ValoraciÃ³n"
                    android:backgroundTint="#009688"
                    android:textColor="@android:color/white"/>
            </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <!-- ðŸ”¹ Bottom Navigation -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:background="@android:color/white"
            app:menu="@menu/bottom_nav_menu"
            app:itemIconTint="@color/teal_700"
            app:itemTextColor="@color/teal_700"
            app:labelVisibilityMode="labeled"
            app:itemBackground="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:itemIconSize="70dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>