<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <!-- Contenido principal -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="#009688"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
            app:title="Puriq Tours"
            app:titleCentered="true"
            app:navigationIcon="@drawable/ic_menu"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 游댳 Foto del cliente dentro del Toolbar -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profileIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/imagen_perfil"
                android:scaleType="centerCrop"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="12dp"
                app:shapeAppearanceOverlay="@style/RoundedImage"
                app:strokeColor="@android:color/white"
                app:strokeWidth="2dp"/>
        </com.google.android.material.appbar.MaterialToolbar>

        <!-- 游댳 Contenido con Scroll -->
        <ScrollView
            android:id="@+id/scrollContent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#F8F9FA"
            app:layout_constraintTop_toBottomOf="@id/topAppBar"
            app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- T칤tulo -->
                <TextView
                    android:text="Detalles de perfil"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2B746C"/>

                <!-- Subt칤tulo -->
                <TextView
                    android:text="Datos"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:textColor="#009688"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- Foto -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profileImage"
                    android:src="@drawable/imagen_perfil"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    app:shapeAppearanceOverlay="@style/RoundedImage"
                    app:strokeColor="#2B746C"
                    app:strokeWidth="2dp"/>

                <!-- Datos -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <!-- Nombre -->
                    <LinearLayout
                        style="@style/ProfileItem"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombres:"
                            android:textColor="#2B746C"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                        <EditText
                            android:id="@+id/etNombre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alejandro Gutarra"
                            android:textColor="#2B746C"
                            android:textStyle="normal"
                            android:textSize="16sp"
                            android:enabled="false"
                            android:layout_marginStart="6dp"/>
                    </LinearLayout>

                    <!-- Apellidos -->
                    <LinearLayout
                        style="@style/ProfileItem"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Apellidos:"
                            android:textColor="#2B746C"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                        <EditText
                            android:id="@+id/etApellido"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Flores Pozo"
                            android:textColor="#2B746C"
                            android:textStyle="normal"
                            android:textSize="16sp"
                            android:enabled="false"
                            android:layout_marginStart="6dp"/>
                    </LinearLayout>

                    <!-- Fecha de nacimiento -->
                    <LinearLayout
                        style="@style/ProfileItem"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fecha de nacimiento:"
                            android:textColor="#2B746C"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                        <EditText
                            android:id="@+id/etFechaNacimiento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="29 de enero 2001"
                            android:textColor="#2B746C"
                            android:textStyle="normal"
                            android:textSize="16sp"
                            android:enabled="false"
                            android:layout_marginStart="6dp"/>
                    </LinearLayout>

                    <!-- N칰mero de documento -->
                    <LinearLayout
                        style="@style/ProfileItem"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N칰mero de documento:"
                            android:textColor="#2B746C"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                        <EditText
                            android:id="@+id/etNumeroDocumento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="98987876"
                            android:textColor="#2B746C"
                            android:textStyle="normal"
                            android:textSize="16sp"
                            android:enabled="false"
                            android:layout_marginStart="6dp"/>
                    </LinearLayout>

                    <!-- N칰mero telef칩nico -->
                    <LinearLayout
                        android:orientation="horizontal"
                        style="@style/ProfileItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N칰mero telef칩nico:"
                            android:textColor="#2B746C"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                        <EditText
                            android:id="@+id/etNumeroTelefonico"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="98987878"
                            android:textColor="#2B746C"
                            android:textStyle="normal"
                            android:textSize="16sp"
                            android:enabled="false"
                            android:layout_marginStart="6dp"/>
                    </LinearLayout>

                    <!-- Tipo de documento -->
                    <LinearLayout
                        style="@style/ProfileItem"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipo de documento:"
                            android:textColor="#2B746C"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                        <EditText
                            android:id="@+id/etTipoDocumento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DNI"
                            android:textColor="#2B746C"
                            android:textStyle="normal"
                            android:textSize="16sp"
                            android:enabled="false"
                            android:layout_marginStart="6dp"/>
                    </LinearLayout>

                    <!-- Direcci칩n -->
                    <LinearLayout
                        style="@style/ProfileItem"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Direcci칩n:"
                            android:textColor="#2B746C"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                        <EditText
                            android:id="@+id/etDireccion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Teniente Diego Ferre 215"
                            android:textColor="#2B746C"
                            android:textStyle="normal"
                            android:textSize="16sp"
                            android:enabled="false"
                            android:layout_marginStart="6dp"/>
                    </LinearLayout>

                    <!-- Correo electr칩nico -->
                    <LinearLayout
                        style="@style/ProfileItem"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Correo electr칩nico:"
                            android:textColor="#2B746C"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                        <EditText
                            android:id="@+id/etCorreo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="alejandro5b@gmail.com"
                            android:textColor="#2B746C"
                            android:textStyle="normal"
                            android:textSize="16sp"
                            android:enabled="false"
                            android:layout_marginStart="6dp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp">

                    <Button
                        android:id="@+id/btnUpdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/teal_700"
                        android:text="Actualizar datos"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnSave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="@color/teal_500"
                        android:text="Guardar cambios"
                        android:textColor="@android:color/white"
                        android:visibility="gone"/> <!-- Oculto al inicio -->
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:background="@android:color/white"
            app:menu="@menu/bottom_nav_menu"
            app:itemIconTint="@color/teal_700"
            app:itemTextColor="@color/teal_700"
            app:labelVisibilityMode="labeled"
            app:itemBackground="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:itemIconSize="70dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 游댳 Men칰 lateral agregado -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:itemIconTint="@color/nav_item_colors"
        app:itemTextColor="@color/nav_item_colors"
        app:itemIconSize="66dp"/>

</androidx.drawerlayout.widget.DrawerLayout>
