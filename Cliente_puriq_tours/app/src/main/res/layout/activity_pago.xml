<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PagoActivity">
    <!-- ðŸ”¹ Toolbar superior -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#009688"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:title="Puriq Tours"
        app:titleCentered="true"
        app:navigationIcon="@drawable/ic_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ðŸ”¹ Icono perfil -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="8dp"
            android:src="@drawable/imagen_perfil"
            app:shapeAppearanceOverlay="@style/RoundedImage"
            app:strokeColor="@android:color/white"
            app:strokeWidth="2dp"/>
    </com.google.android.material.appbar.MaterialToolbar>

    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- ðŸ”¹ Flecha atrÃ¡s -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Volver"
                android:tint="@color/teal_700"
                android:layout_marginBottom="8dp"/>
            <!-- Encabezado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="InformaciÃ³n sobre la reserva"
                    android:textSize="16sp"
                    android:textColor="@color/teal_700" />

            </LinearLayout>

            <!-- Card del tour -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/box_bg"
                android:padding="12dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ciudadela de Kuelap"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#2B746C" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amazonas"
                        android:textSize="15sp"
                        android:textColor="#666"/>

                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:progressTint="@color/teal_700"
                        android:rating="5"
                        android:stepSize="0.5" />

                    <TextView
                        android:id="@+id/tvOpiniones"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="(27 opiniones)"
                        android:textColor="#2B746C"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/kuelap"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>

            <!-- Campos de fecha, hora, viajeros -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/box_bg">

                <TextView
                    android:id="@+id/tvFechaPago"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#2B746C"

                    android:text="Fecha:   Martes, 15 de Setiembre de 2025"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvHoraPago"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#2B746C"
                    android:text="Hora:   09:00"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tvViajerosPago"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#2B746C"
                    android:text="Viajeros:   2 adultos"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- CancelaciÃ³n -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/box_bg">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_circle"
                    android:tint="@color/teal_700"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="#2B746C"
                    android:text="CancelaciÃ³n gratuita antes de las 09:00 del 16 de Marzo (hora local del tour)"
                    android:textSize="13sp"/>
            </LinearLayout>

            <!-- Total -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:textSize="16dp"
                android:background="#f0f0f0"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#2B746C"
                    android:text="Total"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvPrecioPago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="s/. 300"                        android:textColor="#2B746C"
                    android:textSize="16dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Detalles de pago -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2B746C"
                android:text="Detalles de Pago"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2B746C"
                android:text="Pagar con"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>

            <!-- Opciones de pago -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:background="@drawable/box_bg"
                android:padding="12dp">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rbTarjeta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Tarjeta de crÃ©dito/dÃ©bito"
                        android:drawableEnd="@drawable/visa"
                        android:drawablePadding="8dp"/>

                    <RadioButton
                        android:id="@+id/rbGooglePay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Google Pay"
                        android:layout_marginTop="8dp"
                        android:drawableEnd="@drawable/google"
                    android:drawablePadding="8dp"/>
                </RadioGroup>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- ðŸ”¹ Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:background="@android:color/white"
        app:itemBackground="@android:color/transparent"
        app:itemIconSize="70dp"
        app:itemIconTint="@color/teal_700"
        app:itemTextColor="@color/teal_700"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>