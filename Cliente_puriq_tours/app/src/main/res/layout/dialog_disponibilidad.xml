<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Estado -->
    <TextView
        android:id="@+id/tvEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado: Disponible"
        android:textStyle="bold"
        android:textColor="#1EA01A"
        android:textSize="16sp" />

    <!-- Selección de fecha -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/box_bg"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/btnCalendarioDisponibilidad"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_calendar"
            app:tint="@color/teal_200" />

        <TextView
            android:id="@+id/tvFechaSeleccionada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Selecciona una fecha"
            android:textColor="#2B746C"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Selección de viajeros -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/box_bg"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_persons"
            app:tint="@color/teal_200" />

        <TextView
            android:id="@+id/tvViajerosSeleccionados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="2 adultos"
            android:textColor="#2B746C"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Detalles -->
    <TextView
        android:id="@+id/tvDetalles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="2 opciones disponibles para el viernes 5 de Septiembre"
        android:textColor="#666"
        android:textSize="13sp" />

    <!-- Card del tour -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/box_bg"
        android:layout_marginTop="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ciudadela de Kuélap"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#2B746C" />

        <TextView
            android:id="@+id/tvPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 adultos x S/. 300"
            android:textColor="#000"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(el precio no incluye adicionales)"
            android:textSize="12sp"
            android:textColor="#666" />

        <!-- Horarios -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnHora1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9:00am"
                android:backgroundTint="@color/teal_700"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnHora2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="11:00am"
                android:backgroundTint="@color/teal_700"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <!-- Reservar -->
    <Button
        android:id="@+id/btnReservar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Reservar ahora"
        android:backgroundTint="@color/teal_700"
        android:textColor="@android:color/white" />
</LinearLayout>
