<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChatActivity">

    <!-- ðŸ”¹ Toolbar superior -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#009688"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:title="Puriq Tours"
        app:titleCentered="true"
        app:navigationIcon="@drawable/ic_menu">

        <!-- ðŸ”¹ Icono perfil dentro del Toolbar -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="8dp"
            android:src="@drawable/imagen_perfil"
            app:shapeAppearanceOverlay="@style/RoundedImage"
            app:strokeColor="@android:color/white"
            app:strokeWidth="2dp"/>
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- ðŸ”¹ BotÃ³n Back debajo del toolbar -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Volver"
        android:tint="@color/teal_700"
        android:layout_margin="8dp"/>

    <!-- ðŸ”¹ Logo -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:scaleType="centerInside"
        android:src="@drawable/mathi" />

    <!-- ðŸ”¹ Texto saludo -->
    <TextView
        android:id="@+id/tvSaludo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:text="Buenas tardes, Usuario1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <!-- ðŸ”¹ Preguntas frecuentes -->
    <LinearLayout
        android:id="@+id/layoutFAQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Â¿A quÃ© hora debo llegar para el check-in?"
                android:textColor="@android:color/black"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Â¿Puedo reprogramar mi tour o cambiar la fecha?"
                android:textColor="@android:color/black"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Â¿CÃ³mo envÃ­o una queja o sugerencia sobre el tour?"
                android:textColor="@android:color/black"/>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- ðŸ”¹ Chat Recycler -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerChat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:padding="8dp"/>

    <!-- ðŸ”¹ Input de mensaje -->
    <LinearLayout
        android:id="@+id/layoutInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <EditText
            android:id="@+id/etMensaje"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/search_background"
            android:hint="Mensaje.."
            android:padding="10dp"
            android:textColor="@android:color/black"/>

        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/teal_700"
            android:contentDescription="Enviar"
            android:src="@android:drawable/ic_menu_send"/>

        <ImageButton
            android:id="@+id/btnVoice"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/teal_700"
            android:contentDescription="Voz"
            android:src="@android:drawable/ic_btn_speak_now"/>
    </LinearLayout>
</LinearLayout>
