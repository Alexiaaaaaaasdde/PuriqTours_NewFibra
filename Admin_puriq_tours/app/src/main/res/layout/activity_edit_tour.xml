<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/teal_700"
        app:title="Editar tour"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/white" />

    <!-- NestedScrollView principal -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Hora de inicio del tour -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hora de inicio del tour:"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxStrokeColor="@color/teal_700"
                app:hintTextColor="@color/teal_700">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etHoraInicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Selecciona la hora"
                    android:focusable="false"
                    android:clickable="true"
                    android:drawableEnd="@drawable/ic_schedule"
                    android:drawableTint="@color/teal_700" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Duración del tour -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duración del tour:"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxStrokeColor="@color/teal_700"
                app:hintTextColor="@color/teal_700">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDuracion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ej: 4 horas" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Costo por persona -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Costo por persona:"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxStrokeColor="@color/teal_700"
                app:hintTextColor="@color/teal_700">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCosto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ej: 30 soles"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Idiomas ofrecidos -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Idiomas ofrecidos:"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxStrokeColor="@color/teal_700"
                app:hintTextColor="@color/teal_700">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etIdiomas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ej: Español - Inglés" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Fecha del tour -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha del tour:"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:boxStrokeColor="@color/teal_700"
                app:hintTextColor="@color/teal_700">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFechaTour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Selecciona la fecha"
                    android:focusable="false"
                    android:clickable="true"
                    android:drawableEnd="@drawable/ic_calendar"
                    android:drawableTint="@color/teal_700" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Servicios extra -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Servicios extra:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/teal_700"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:id="@+id/layoutServicios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnAgregarServicio"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Agregar servicio"
                android:textSize="16sp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/teal_200"
                android:textColor="@color/teal_700"
                android:layout_marginBottom="24dp"
                style="?attr/materialButtonOutlinedStyle"
                app:strokeColor="@color/teal_700"
                app:strokeWidth="2dp" />

            <!-- Ruta -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ruta:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/teal_700"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:id="@+id/layoutUbicaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnAgregarRuta"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Agregar ruta"
                android:textSize="16sp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/teal_200"
                android:textColor="@color/teal_700"
                android:layout_marginBottom="32dp"
                style="?attr/materialButtonOutlinedStyle"
                app:strokeColor="@color/teal_700"
                app:strokeWidth="2dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Botones fijos en la parte inferior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="4dp">

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Cancelar"
            android:textSize="16sp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/gray_medium"
            android:textColor="@color/white"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnGuardarTour"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Guardar"
            android:textSize="16sp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/teal_700"
            android:textColor="@color/white"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>
