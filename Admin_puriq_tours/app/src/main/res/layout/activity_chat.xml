<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChatActivity">

    <!-- ðŸ”¹ Toolbar superior -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/teal_700"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:title="Puriq Tours"
        app:titleCentered="true"
        app:titleTextColor="@color/white">

        <!-- ðŸ”¹ Icono admin perfil dentro del Toolbar -->
        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="8dp"
            android:src="@drawable/imagen_perfil"
            android:background="@drawable/bg_circle"
            android:padding="2dp"/>
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- ðŸ”¹ Header del chat -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="16dp"
        android:elevation="2dp">

        <!-- BotÃ³n Back -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Volver"
            android:tint="@color/teal_700"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvClientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat con Cliente"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tvTourName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tour: Nombre del Tour"
            android:textSize="14sp"
            android:textColor="@color/teal_700"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

    <!-- ðŸ”¹ Chat Recycler -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerChat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:padding="8dp"
        android:background="#F8F9FA"/>

    <!-- ðŸ”¹ Input de mensaje -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/white"
        android:elevation="4dp">

        <EditText
            android:id="@+id/etMensaje"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/search_background"
            android:hint="Escribe tu respuesta..."
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:layout_marginEnd="8dp"/>

        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/teal_700"
            android:contentDescription="Enviar"
            android:src="@android:drawable/ic_menu_send"
            android:tint="@color/white"
            android:layout_marginEnd="4dp"/>

        <ImageButton
            android:id="@+id/btnVoice"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/teal_700"
            android:contentDescription="Voz"
            android:src="@android:drawable/ic_btn_speak_now"
            android:tint="@color/white"/>
    </LinearLayout>
</LinearLayout>