<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/teal_700"
        app:title="Detalles del guía"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/white" />

    <!-- Contenido principal con scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Título "Datos" con flecha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Datos"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/teal_700" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_forward"
                    app:tint="@color/teal_700" />

            </LinearLayout>

            <!-- Foto del perfil -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto de perfil:"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:id="@+id/imgGuidePhoto"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/avatar"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_corners" />

            </FrameLayout>

            <!-- Nombres y Apellidos en una fila -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Nombres -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombres:"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvNombres"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Nassim Ahmed"
                        android:background="@drawable/rounded_edittext"
                        android:padding="12dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black" />

                </LinearLayout>

                <!-- Apellidos -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apellidos:"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvApellidos"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Flores Pozo"
                        android:background="@drawable/rounded_edittext"
                        android:padding="12dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black" />

                </LinearLayout>

            </LinearLayout>

            <!-- Tipo de documento y Número de documento en una fila -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Tipo de documento -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipo de documento:"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="DNI"
                        android:background="@drawable/rounded_edittext"
                        android:padding="12dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black" />

                </LinearLayout>

                <!-- Número de documento -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Número de documento:"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvNumeroDocumento"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="87654321"
                        android:background="@drawable/rounded_edittext"
                        android:padding="12dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black" />

                </LinearLayout>

            </LinearLayout>

            <!-- Fecha de nacimiento -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de nacimiento:"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvFechaNacimiento"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="6 de enero 2000"
                android:background="@drawable/rounded_edittext"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

            <!-- Correo electrónico y Teléfono en una fila -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Correo electrónico -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Correo electrónico:"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvCorreo"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="nass.pozo@gmail.com"
                        android:background="@drawable/rounded_edittext"
                        android:padding="12dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black" />

                </LinearLayout>

                <!-- Teléfono -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teléfono:"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvTelefono"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="987654321"
                        android:background="@drawable/rounded_edittext"
                        android:padding="12dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black" />

                </LinearLayout>

            </LinearLayout>

            <!-- Domicilio -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Domicilio:"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDomicilio"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Av. Salvador 165"
                android:background="@drawable/rounded_edittext"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

            <!-- Idiomas -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Idiomas:"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvIdiomas"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Español-Inglés-Quechua"
                android:background="@drawable/rounded_edittext"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

            <!-- Puntuación -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puntuación:"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvPuntuacion"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="⭐⭐⭐⭐⭐"
                android:background="@drawable/rounded_edittext"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginBottom="32dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Botón Asignar a un tour fijo en la parte inferior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="4dp">

        <Button
            android:id="@+id/btnAsignarTour"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Asignar a un tour"
            android:textSize="16sp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/teal_700"
            android:textColor="@color/white" />

    </LinearLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:menu="@menu/bottom_nav_admin_menu"
        app:itemIconTint="@color/nav_item_colors"
        app:itemTextColor="@color/nav_item_colors"
        app:labelVisibilityMode="labeled" />

</LinearLayout>
