<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/rounded_dialog_background"
    android:gravity="center">

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lea con atención"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/teal_700"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <!-- Ícono de interrogación -->
    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/circle_background_dark"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="?"
            android:textSize="36sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Mensaje principal -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Está seguro que desea proponerle este tour al guía Nassim?"
        android:textSize="16sp"
        android:textColor="@color/gray_dark"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:lineSpacingExtra="4dp" />

    <!-- Mensaje secundario -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No podrá realizar ninguna acción en el tour seleccionado una vez el guía mande su respuesta sobre la proposición."
        android:textSize="14sp"
        android:textColor="@color/gray_medium"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:lineSpacingExtra="2dp" />

    <!-- Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Botón Proponer -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnProponer"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Proponer"
            android:textColor="@color/white"
            android:backgroundTint="@color/teal_700"
            android:layout_marginEnd="8dp"
            app:cornerRadius="8dp" />

        <!-- Botón Cerrar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCerrar"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Cerrar"
            android:textColor="@color/teal_700"
            android:backgroundTint="@color/gray_light"
            android:layout_marginStart="8dp"
            app:cornerRadius="8dp" />

    </LinearLayout>

</LinearLayout>
