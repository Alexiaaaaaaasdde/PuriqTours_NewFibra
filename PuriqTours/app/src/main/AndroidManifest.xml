<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.PuriqTours">

        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.PuriqTours.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SetupProfileActivity"
            android:exported="false" />

        <activity
            android:name=".SetPasswordActivity"
            android:exported="false"
            android:parentActivityName=".RegisterActivity" />

        <activity android:name=".onboarding.InterestsOnboardingActivity"
            android:exported="false"/>

        <activity android:name=".onboarding.RegionsActivity" />


        <activity android:name=".MainActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".ForgotPasswordActivity" />
        <activity android:name=".TempPasswordActivity" />
        <activity android:name=".ResetPasswordActivity" />
        <activity android:name=".HomeActivity" />

    </application>

</manifest>