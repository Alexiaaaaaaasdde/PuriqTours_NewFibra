<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <!-- Contenedor que centra vertical/horizontal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="16dp">

        <!-- Tarjeta (más angosta con margen horizontal) -->
        <LinearLayout
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/bg_card_rounded"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elige tu idioma"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"/>

            <RadioGroup
                android:id="@+id/groupLangs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rbEsPe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Español (Perú)"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/rbEsLatam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Español (LatAm)"/>

                <RadioButton
                    android:id="@+id/rbEn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="English"/>

                <RadioButton
                    android:id="@+id/rbQu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quechua (Runa Simi)"/>

                <RadioButton
                    android:id="@+id/rbAy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aymara"/>

                <!-- NUEVO: Otro -->
                <RadioButton
                    android:id="@+id/rbOther"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Otro (especificar)"/>
            </RadioGroup>

            <!-- Campo que aparece solo si eligen “Otro” -->
            <EditText
                android:id="@+id/etOtherLanguage"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Escribe el idioma"
                android:background="@drawable/bg_input"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:inputType="textCapWords"/>

            <Button
                android:id="@+id/btnLangContinue"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Continuar"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/bg_button"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
