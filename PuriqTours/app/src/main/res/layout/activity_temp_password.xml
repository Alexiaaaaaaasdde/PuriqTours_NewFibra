<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fondo -->
    <ImageView
        android:id="@+id/bgTemp"
        android:src="@drawable/background_puriq"
        android:scaleType="centerCrop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Logo + título -->
    <LinearLayout
        android:id="@+id/logoContainer"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

    <!-- Tarjeta de ingreso -->
    <LinearLayout
        android:id="@+id/tempCard"
        android:orientation="vertical"
        android:background="@drawable/bg_card_rounded"
        android:padding="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/logoContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="24dp">

        <TextView
            android:id="@+id/tvTempTitle"
            android:text="Ingresa el código temporal"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvTempDesc"
            android:text="Escribe la clave de 4 dígitos que recibiste en tu correo para continuar con el cambio de contraseña."
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/codeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/code1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:background="@drawable/bg_input"
                android:textSize="20sp"
                android:imeOptions="actionNext"
                android:layout_margin="6dp"/>

            <EditText
                android:id="@+id/code2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:background="@drawable/bg_input"
                android:textSize="20sp"
                android:imeOptions="actionNext"
                android:layout_margin="6dp"/>

            <EditText
                android:id="@+id/code3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:background="@drawable/bg_input"
                android:textSize="20sp"
                android:imeOptions="actionNext"
                android:layout_margin="6dp"/>

            <EditText
                android:id="@+id/code4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:background="@drawable/bg_input"
                android:textSize="20sp"
                android:imeOptions="actionDone"
                android:layout_margin="6dp"/>
        </LinearLayout>


        <!-- Botón aceptar -->
        <Button
            android:id="@+id/btnTempOk"
            android:text="Aceptar"
            android:textColor="@color/white"
            android:background="@drawable/bg_button"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

