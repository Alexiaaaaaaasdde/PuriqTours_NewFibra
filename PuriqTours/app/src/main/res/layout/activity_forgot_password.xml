<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fondo -->
    <ImageView
        android:id="@+id/bgForgot"
        android:src="@drawable/background_puriq"
        android:scaleType="centerCrop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón atrás - Posicionado correctamente -->
    <ImageButton
        android:id="@+id/btnBackForgot"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_circle_teal"
        android:contentDescription="Atrás"
        android:src="@drawable/ic_arrow_back"
        android:tint="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp" />

    <!-- Tarjeta centrada -->
    <LinearLayout
        android:id="@+id/recoverCard"
        android:orientation="vertical"
        android:background="@drawable/bg_card_rounded"
        android:padding="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp">

        <TextView
            android:id="@+id/tvForgotTitle"
            android:text="¿Olvidaste tu contraseña?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvForgotDesc"
            android:text="Ingresa el correo electrónico con el que te registraste para iniciar la recuperación de tu cuenta."
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etEmailForgot"
            android:hint="Ingresa tu correo electrónico"
            android:inputType="textEmailAddress"
            android:background="@drawable/bg_input"
            android:drawableStart="@android:drawable/ic_dialog_email"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>

        <Button
            android:id="@+id/btnForgotOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aceptar"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>