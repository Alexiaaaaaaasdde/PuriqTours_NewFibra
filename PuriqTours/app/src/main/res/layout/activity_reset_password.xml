<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fondo -->
    <ImageView
        android:id="@+id/bgReset"
        android:src="@drawable/background_puriq"
        android:scaleType="centerCrop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón atrás - Posicionado correctamente -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_circle_teal"
        android:contentDescription="Atrás"
        android:elevation="6dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        app:tint="@android:color/white" />

    <!-- Tarjeta de reset centrada -->
    <LinearLayout
        android:id="@+id/resetCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:background="@drawable/bg_card_rounded"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvResetTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Restablecer contraseña"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvResetDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="Crea una nueva contraseña para tu cuenta y confírmala abajo."
            android:textAlignment="center" />

        <!-- Correo -->
        <EditText
            android:id="@+id/etEmailReset"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_input"
            android:drawableStart="@android:drawable/ic_dialog_email"
            android:hint="Ingresa tu correo electrónico"
            android:inputType="textEmailAddress" />

        <!-- Nueva contraseña -->
        <EditText
            android:id="@+id/etNewPass"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_input"
            android:drawableStart="@android:drawable/ic_lock_lock"
            android:hint="Nueva contraseña"
            android:inputType="textPassword" />

        <!-- Repetir contraseña -->
        <EditText
            android:id="@+id/etRepeatPass"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_input"
            android:drawableStart="@android:drawable/ic_lock_lock"
            android:hint="Repetir contraseña"
            android:inputType="textPassword" />

        <!-- Botón aceptar -->
        <Button
            android:id="@+id/btnResetOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_button"
            android:text="Restablecer contraseña"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

