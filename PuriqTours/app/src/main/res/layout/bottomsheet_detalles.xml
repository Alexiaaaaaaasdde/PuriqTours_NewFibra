<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Encabezado opcional con imagen/mapa -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgMapa"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/maps"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"
            android:layout_marginBottom="16dp" />

        <!-- ðŸ”¹ Actividades -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_activity"
                app:tint="@color/teal_700" />

            <TextView
                android:id="@+id/tvActividades"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Caminata, visita guiada"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>
        </LinearLayout>

        <!-- ðŸ”¹ DuraciÃ³n total -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_timer"
                app:tint="@color/teal_700" />

            <TextView
                android:id="@+id/tvDuracion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="DuraciÃ³n total: 6h"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>
        </LinearLayout>

        <!-- ðŸ”¹ Costo -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_money"
                app:tint="@color/teal_700" />

            <TextView
                android:id="@+id/tvCosto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Costo: $45"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>
        </LinearLayout>

        <!-- ðŸ”¹ Servicios extra -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_services"
                app:tint="@color/teal_700" />

            <TextView
                android:id="@+id/tvServiciosExtra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Transporte, snacks"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>
        </LinearLayout>

        <!-- ðŸ”¹ Idiomas -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_language"
                app:tint="@color/teal_700" />

            <TextView
                android:id="@+id/tvIdiomas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="EspaÃ±ol, InglÃ©s"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>
        </LinearLayout>

        <!-- ðŸ”¹ Horario + Fecha -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calendar"
                app:tint="@color/teal_700" />

            <TextView
                android:id="@+id/tvHorarioFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Inicio: 09:00 - Fin: 15:00 | Fecha: 20/09/2025"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
