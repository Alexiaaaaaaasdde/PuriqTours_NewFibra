<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="8dp"
    android:paddingHorizontal="12dp">

    <!-- ðŸ”¹ Parte siempre visible -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <!-- Imagen -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgSolicitud"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.SmallComponent"
            android:src="@drawable/ic_launcher_foreground" />

        <!-- Texto -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TÃ­tulo de la solicitud"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvDescripcionCorta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="DescripciÃ³n corta de la solicitud..."
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/darkgreen" />
        </LinearLayout>
    </LinearLayout>

    <!-- ðŸ”¹ Parte expandible -->
    <LinearLayout
        android:id="@+id/layoutExpandible"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/tvDescripcionCompleta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AquÃ­ va la descripciÃ³n completa de la solicitud que aparece al expandir."
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:textColor="@color/black" />

        <!-- Botones -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDetalles"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalles" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIniciar"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iniciar"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
