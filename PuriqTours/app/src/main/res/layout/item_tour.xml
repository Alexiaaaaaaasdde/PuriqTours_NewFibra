<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_item_solicitud"
    android:padding="12dp"
    android:layout_marginVertical="6dp"
    android:elevation="2dp">

    <!-- ðŸ”¹ Parte siempre visible -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <!-- Imagen -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgSolicitud"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.MediumComponent"
            android:src="@drawable/ic_launcher_foreground" />

        <!-- Texto -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TÃ­tulo de la solicitud"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvDescripcionCorta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="DescripciÃ³n corta de la solicitud..."
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="@color/darkgreen"
                android:layout_marginTop="2dp" />

            <!-- ðŸ”¹ Ciudad -->
            <TextView
                android:id="@+id/tvCiudad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ciudad: Lima"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="@color/black"
                android:layout_marginTop="2dp" />

            <!-- ðŸ”¹ Fecha -->
            <TextView
                android:id="@+id/tvFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha: 18/09/2025"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="@color/black"
                android:layout_marginTop="2dp" />

            <!-- ðŸ”¹ Rango de hora -->
            <TextView
                android:id="@+id/tvRangoHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hora: 10:00 - 12:00"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="@color/black"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- ðŸ”¹ Parte expandible -->
    <LinearLayout
        android:id="@+id/layoutExpandible"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tvDescripcionCompleta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AquÃ­ va la descripciÃ³n completa de la solicitud que aparece al expandir."
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:textColor="@color/black"
            android:lineSpacingExtra="2dp" />

        <!-- Botones -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDetalles"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalles" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIniciar"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iniciar"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
