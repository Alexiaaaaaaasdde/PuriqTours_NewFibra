<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenido principal -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F9FA"
        android:fitsSystemWindows="true"
        android:layout_marginBottom="70dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".superadmin.MainActivity">

        <!-- TopAppBar personalizada -->
        <include layout="@layout/top_app_bar_superadmin"/>

        <!-- Contenido scrollable -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollContent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/topAppBar" 
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <!-- Hey, Superadmin (fuera de cualquier card) -->
                <TextView
                    android:id="@+id/tvHeySuperadmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hey, Superadmin"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#26A69A"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"/>

                <!-- KPIs: Usuarios activos, Empresas, Guías -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="16dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_avatar_placeholder_superadmin"
                            android:contentDescription="Usuarios activos"
                            android:scaleType="centerInside"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="125"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Usuarios activos"
                            android:textSize="13sp"
                            android:gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_company_superadmin"
                            android:contentDescription="Empresas registradas"
                            android:scaleType="centerInside"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="35"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Empresas registradas"
                            android:textSize="13sp"
                            android:gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_guide_superadmin"
                            android:contentDescription="Guías habilitados"
                            android:scaleType="centerInside"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="120"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Guías habilitados"
                            android:textSize="13sp"
                            android:gravity="center"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Sección Usuarios -->
                <TextView
                    android:id="@+id/tvUsuarios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usuarios"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#26A69A"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"/>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:fillViewport="true">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="140dp"
                        android:orientation="horizontal"
                        android:gravity="bottom">
                        <!-- Barras de ejemplo (más de 6 para scroll) -->
                        <LinearLayout android:layout_width="60dp" android:layout_height="match_parent" android:orientation="vertical" android:gravity="bottom|center_horizontal">
                            <View android:layout_width="24dp" android:layout_height="80dp" android:background="#B2DFDB"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tour 1" android:textSize="12sp" android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="60dp" android:layout_height="match_parent" android:orientation="vertical" android:gravity="bottom|center_horizontal">
                            <View android:layout_width="24dp" android:layout_height="60dp" android:background="#B2DFDB"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tour 2" android:textSize="12sp" android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="60dp" android:layout_height="match_parent" android:orientation="vertical" android:gravity="bottom|center_horizontal">
                            <View android:layout_width="24dp" android:layout_height="100dp" android:background="#B2DFDB"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tour 3" android:textSize="12sp" android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="60dp" android:layout_height="match_parent" android:orientation="vertical" android:gravity="bottom|center_horizontal">
                            <View android:layout_width="24dp" android:layout_height="90dp" android:background="#B2DFDB"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tour 4" android:textSize="12sp" android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="60dp" android:layout_height="match_parent" android:orientation="vertical" android:gravity="bottom|center_horizontal">
                            <View android:layout_width="24dp" android:layout_height="70dp" android:background="#B2DFDB"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tour 5" android:textSize="12sp" android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="60dp" android:layout_height="match_parent" android:orientation="vertical" android:gravity="bottom|center_horizontal">
                            <View android:layout_width="24dp" android:layout_height="40dp" android:background="#B2DFDB"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Otros" android:textSize="12sp" android:gravity="center"/>
                        </LinearLayout>
                        <!-- Más barras para scroll -->
                        <LinearLayout android:layout_width="60dp" android:layout_height="match_parent" android:orientation="vertical" android:gravity="bottom|center_horizontal">
                            <View android:layout_width="24dp" android:layout_height="110dp" android:background="#B2DFDB"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tour 6" android:textSize="12sp" android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="60dp" android:layout_height="match_parent" android:orientation="vertical" android:gravity="bottom|center_horizontal">
                            <View android:layout_width="24dp" android:layout_height="50dp" android:background="#B2DFDB"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tour 7" android:textSize="12sp" android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="60dp" android:layout_height="match_parent" android:orientation="vertical" android:gravity="bottom|center_horizontal">
                            <View android:layout_width="24dp" android:layout_height="95dp" android:background="#B2DFDB"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tour 8" android:textSize="12sp" android:gravity="center"/>
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <!-- Solicitud de Guías de Turismo -->
                <TextView
                    android:id="@+id/tvSolicitudes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Solicitud de Guías de Turismo"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#26A69A"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"/>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:fillViewport="true">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="110dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <!-- Guía 1 -->
                        <LinearLayout android:layout_width="72dp" android:layout_height="match_parent" android:orientation="vertical" android:gravity="center_horizontal">
                            <ImageView android:layout_width="95dp" android:layout_height="85dp" android:src="@drawable/ic_avatar_placeholder_superadmin" android:contentDescription="Alejandro G." android:scaleType="fitXY"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Alejandro G." android:textSize="12sp" android:gravity="center"/>
                        </LinearLayout>
                        <!-- Más guías para scroll -->
                        <LinearLayout android:layout_width="72dp" android:layout_height="match_parent" android:orientation="vertical" android:gravity="center_horizontal">
                            <ImageView android:layout_width="95dp" android:layout_height="85dp" android:src="@drawable/ic_avatar_placeholder_superadmin" android:contentDescription="Cristhian F." android:scaleType="fitXY"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Cristhian F." android:textSize="12sp" android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="72dp" android:layout_height="match_parent" android:orientation="vertical" android:gravity="center_horizontal">
                            <ImageView android:layout_width="95dp" android:layout_height="85dp" android:src="@drawable/ic_avatar_placeholder_superadmin" android:contentDescription="Nassim H." android:scaleType="fitXY"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Nassim H." android:textSize="12sp" android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="72dp" android:layout_height="match_parent" android:orientation="vertical" android:gravity="center_horizontal">
                            <ImageView android:layout_width="95dp" android:layout_height="85dp" android:src="@drawable/ic_avatar_placeholder_superadmin" android:contentDescription="Guía" android:scaleType="fitXY"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Guía" android:textSize="12sp" android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="72dp" android:layout_height="match_parent" android:orientation="vertical" android:gravity="center_horizontal">
                            <ImageView android:layout_width="95dp" android:layout_height="85dp" android:src="@drawable/ic_avatar_placeholder_superadmin" android:contentDescription="tralalero trala" android:scaleType="fitXY"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="tralalero trala" android:textSize="12sp" android:gravity="center"/>
                        </LinearLayout>
                        <!-- Más guías aleatorios -->
                        <LinearLayout android:layout_width="72dp" android:layout_height="match_parent" android:orientation="vertical" android:gravity="center_horizontal">
                            <ImageView android:layout_width="95dp" android:layout_height="85dp" android:src="@drawable/ic_avatar_placeholder_superadmin" android:contentDescription="María P." android:scaleType="fitXY"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="María P." android:textSize="12sp" android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="72dp" android:layout_height="match_parent" android:orientation="vertical" android:gravity="center_horizontal">
                            <ImageView android:layout_width="95dp" android:layout_height="85dp" android:src="@drawable/ic_avatar_placeholder_superadmin" android:contentDescription="Juan L." android:scaleType="fitXY"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Juan L." android:textSize="12sp" android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="72dp" android:layout_height="match_parent" android:orientation="vertical" android:gravity="center_horizontal">
                            <ImageView android:layout_width="95dp" android:layout_height="85dp" android:src="@drawable/ic_avatar_placeholder_superadmin" android:contentDescription="Pedro Q." android:scaleType="fitXY"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Pedro Q." android:textSize="12sp" android:gravity="center"/>
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <!-- Empresas registradas -->
                <TextView
                    android:id="@+id/tvEmpresas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Empresas registradas"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#26A69A"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"/>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:fillViewport="true">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="140dp"
                        android:orientation="horizontal"
                        android:gravity="bottom">
                        <!-- Gráfico de líneas simulado con Views (más de 6 para scroll) -->
                        <LinearLayout android:layout_width="80dp" android:layout_height="match_parent" android:orientation="vertical" android:gravity="bottom|center_horizontal">
                            <View android:layout_width="32dp" android:layout_height="60dp" android:background="#80CBC4"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ene" android:textSize="12sp" android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="80dp" android:layout_height="match_parent" android:orientation="vertical" android:gravity="bottom|center_horizontal">
                            <View android:layout_width="32dp" android:layout_height="90dp" android:background="#80CBC4"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Feb" android:textSize="12sp" android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="80dp" android:layout_height="match_parent" android:orientation="vertical" android:gravity="bottom|center_horizontal">
                            <View android:layout_width="32dp" android:layout_height="120dp" android:background="#80CBC4"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Mar" android:textSize="12sp" android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="80dp" android:layout_height="match_parent" android:orientation="vertical" android:gravity="bottom|center_horizontal">
                            <View android:layout_width="32dp" android:layout_height="70dp" android:background="#80CBC4"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Abr" android:textSize="12sp" android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="80dp" android:layout_height="match_parent" android:orientation="vertical" android:gravity="bottom|center_horizontal">
                            <View android:layout_width="32dp" android:layout_height="110dp" android:background="#80CBC4"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="May" android:textSize="12sp" android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="80dp" android:layout_height="match_parent" android:orientation="vertical" android:gravity="bottom|center_horizontal">
                            <View android:layout_width="32dp" android:layout_height="100dp" android:background="#80CBC4"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Jun" android:textSize="12sp" android:gravity="center"/>
                        </LinearLayout>
                        <!-- Más meses para scroll -->
                        <LinearLayout android:layout_width="80dp" android:layout_height="match_parent" android:orientation="vertical" android:gravity="bottom|center_horizontal">
                            <View android:layout_width="32dp" android:layout_height="80dp" android:background="#80CBC4"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Jul" android:textSize="12sp" android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="80dp" android:layout_height="match_parent" android:orientation="vertical" android:gravity="bottom|center_horizontal">
                            <View android:layout_width="32dp" android:layout_height="60dp" android:background="#80CBC4"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ago" android:textSize="12sp" android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="80dp" android:layout_height="match_parent" android:orientation="vertical" android:gravity="bottom|center_horizontal">
                            <View android:layout_width="32dp" android:layout_height="130dp" android:background="#80CBC4"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Sep" android:textSize="12sp" android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="80dp" android:layout_height="match_parent" android:orientation="vertical" android:gravity="bottom|center_horizontal">
                            <View android:layout_width="32dp" android:layout_height="90dp" android:background="#80CBC4"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Oct" android:textSize="12sp" android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="80dp" android:layout_height="match_parent" android:orientation="vertical" android:gravity="bottom|center_horizontal">
                            <View android:layout_width="32dp" android:layout_height="120dp" android:background="#80CBC4"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Nov" android:textSize="12sp" android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="80dp" android:layout_height="match_parent" android:orientation="vertical" android:gravity="bottom|center_horizontal">
                            <View android:layout_width="32dp" android:layout_height="100dp" android:background="#80CBC4"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Dic" android:textSize="12sp" android:gravity="center"/>
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <!-- Gráfico de líneas para Empresas registradas -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardLineChart"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    android:backgroundTint="#FFFFFF">
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChartEmpresas"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"/>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Barra de navegación inferior -->
    <include layout="@layout/navigation_bottombar_superadmin"/>
</FrameLayout>
