<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F9FA">

        <!-- TopBar fija -->
        <include layout="@layout/top_app_bar_superadmin"/>

        <!-- Título Registro de Eventos y avatar -->
        <LinearLayout
            android:id="@+id/logsHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/topAppBar"
            app:layout_constraintStart_toStartOf="parent">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/avatar1"
                android:contentDescription="Avatar"/>
            <TextView
                android:id="@+id/tvLogsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registro de Eventos"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#00B8D4"
                android:layout_marginStart="8dp"
                android:gravity="start"
                android:textAlignment="viewStart"/>
        </LinearLayout>

        <!-- Filtros scrollables -->
        <HorizontalScrollView
            android:id="@+id/logsFiltersScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:layout_marginTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/logsHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout
                android:id="@+id/logsFilters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGeneral"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="General"
                    android:textColor="#00B8D4"
                    app:strokeColor="#00B8D4"
                    app:strokeWidth="2dp"
                    android:backgroundTint="#FFFFFF"
                    android:elevation="0dp"
                    android:layout_marginEnd="8dp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnUsuariosFiltro"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Usuarios"
                    android:textColor="#00B8D4"
                    app:strokeColor="#00B8D4"
                    app:strokeWidth="2dp"
                    android:backgroundTint="#FFFFFF"
                    android:elevation="0dp"
                    android:layout_marginEnd="8dp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPagos"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Pagos"
                    android:textColor="#00B8D4"
                    app:strokeColor="#00B8D4"
                    app:strokeWidth="2dp"
                    android:backgroundTint="#FFFFFF"
                    android:elevation="0dp"
                    android:layout_marginEnd="8dp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGuias"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Guías"
                    android:textColor="#00B8D4"
                    app:strokeColor="#00B8D4"
                    app:strokeWidth="2dp"
                    android:backgroundTint="#FFFFFF"
                    android:elevation="0dp"
                    android:layout_marginEnd="8dp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEmpresas"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Empresas"
                    android:textColor="#00B8D4"
                    app:strokeColor="#00B8D4"
                    app:strokeWidth="2dp"
                    android:backgroundTint="#FFFFFF"
                    android:elevation="0dp"/>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Botón Ordenar -->
        <LinearLayout
            android:id="@+id/ordenarLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/logsFiltersScroll"
            app:layout_constraintStart_toStartOf="parent">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/flechitas_superadmin"
                android:contentDescription="Ordenar"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ordenar"
                android:textColor="#26A69A"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:gravity="start"
                android:textAlignment="viewStart"/>
        </LinearLayout>

        <!-- Lista scrollable de logs -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvLogs"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/ordenarLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingBottom="90dp"
            android:clipToPadding="false"
            android:overScrollMode="always"
            android:scrollbars="vertical"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- BottomBar fija fuera del ConstraintLayout -->
    <include layout="@layout/navigation_bottombar_superadmin"/>
</FrameLayout>