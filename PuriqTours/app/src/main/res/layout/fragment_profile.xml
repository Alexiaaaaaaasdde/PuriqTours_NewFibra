<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profileFragmentRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#F8F9FA">


    <!-- ðŸ”¹ Contenido Scrollable -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- TÃ­tulo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalles de perfil"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- SubtÃ­tulo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Datos --->"
                android:textColor="#009688"
                android:textSize="16sp"
                android:textStyle="italic" />

            <!-- Foto -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profileImage"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/imagen_perfil"
                app:shapeAppearanceOverlay="@style/RoundedImage"
                app:strokeColor="#2B746C"
                app:strokeWidth="2dp" />

            <!-- Datos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <!-- Nombre -->
                <LinearLayout
                    style="@style/ProfileItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombres:"
                        android:textColor="#2B746C"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etNombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:enabled="false"
                        android:text="Alejandro Gutarra"
                        android:textColor="#2B746C"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <!-- Apellidos -->
                <LinearLayout
                    style="@style/ProfileItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apellidos:"
                        android:textColor="#2B746C"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etApellido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:enabled="false"
                        android:text="Flores Pozo"
                        android:textColor="#2B746C"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </LinearLayout>
                <!-- Fecha de nacimiento -->
                <LinearLayout
                    style="@style/ProfileItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha de nacimiento:"
                        android:textColor="#2B746C"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etFechaNacimiento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:enabled="false"
                        android:text="29 de enero 2001"
                        android:textColor="#2B746C"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <!-- NÃºmero de documento -->
                <LinearLayout
                    style="@style/ProfileItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NÃºmero de documento:"
                        android:textColor="#2B746C"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etNumeroDocumento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:enabled="false"
                        android:text="98987876"
                        android:textColor="#2B746C"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <!-- NÃºmero telefÃ³nico -->
                <LinearLayout
                    style="@style/ProfileItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NÃºmero telefÃ³nico:"
                        android:textColor="#2B746C"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etNumeroTelefonico"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:enabled="false"
                        android:text="98987878"
                        android:textColor="#2B746C"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <!-- Tipo de documento -->
                <LinearLayout
                    style="@style/ProfileItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipo de documento:"
                        android:textColor="#2B746C"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etTipoDocumento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:enabled="false"
                        android:text="DNI"
                        android:textColor="#2B746C"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <!-- DirecciÃ³n -->
                <LinearLayout
                    style="@style/ProfileItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DirecciÃ³n:"
                        android:textColor="#2B746C"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etDireccion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:enabled="false"
                        android:text="Teniente Diego Ferre 215"
                        android:textColor="#2B746C"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <!-- Correo electrÃ³nico -->
                <LinearLayout
                    style="@style/ProfileItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Correo electrÃ³nico:"
                        android:textColor="#2B746C"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etCorreo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:enabled="false"
                        android:text="alejandro5b@gmail.com"
                        android:textColor="#2B746C"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </LinearLayout>
                <!-- (ðŸ‘‰ aquÃ­ van el resto de campos igual que ya tienes) -->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/teal_700"
                    android:text="Actualizar datos"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/teal_500"
                    android:text="Guardar cambios"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
