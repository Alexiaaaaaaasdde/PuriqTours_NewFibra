<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<!-- Fondo -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background_puriq"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Contenido centrado -->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Este contenedor hace el centrado vertical/horizontal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <!-- Tarjeta -->
            <LinearLayout
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/bg_card_rounded">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Elige tu usuario"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="@color/md_theme_onSurface"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Luego podrás cambiarlo si quieres."
                    android:textSize="14sp"
                    android:textColor="@color/teal_dark"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"/>

                <!-- Avatar -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar"
                    app:shapeAppearanceOverlay="@style/CircleImage"
                    app:strokeColor="@color/teal_700"
                    app:strokeWidth="2dp" />

                <!-- Subir foto -->
                <Button
                    android:id="@+id/btnUploadPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Subir foto"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:minHeight="44dp"
                    android:background="@drawable/bg_button"
                    android:layout_marginBottom="20dp"/>

                <!-- Usuario -->
                <EditText
                    android:id="@+id/etUsername"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Usuario"
                    android:background="@drawable/bg_input"
                    android:layout_marginBottom="16dp"/>

                <!-- Continuar (alineado y alto cómodo) -->
                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Continuar"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_button"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Botón atrás (por encima del Scroll, con elevación) -->
    <ImageButton
        android:id="@+id/btnBackForgot"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_circle_teal"
        android:contentDescription="Atrás"
        android:src="@drawable/ic_arrow_back"
        android:tint="@android:color/white"
        android:elevation="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
