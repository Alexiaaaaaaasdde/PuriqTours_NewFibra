<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 🔹 Imagen de mapa como fondo -->
    <org.osmdroid.views.MapView
        android:id="@+id/osmMap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" />

    <!-- 🔹 Bottom sheet con info del destino -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomSheetDestino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        android:layout_margin="12dp"
        android:backgroundTint="@android:color/white">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 🔹 Info del lugar -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgDestino"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_foreground"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/machupicchu" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvNombreDestino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hotel Piura"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

                    <TextView
                        android:id="@+id/tvUbicacionDestino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pucp, V tercer piso"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="@color/darkgreen" />

                    <TextView
                        android:id="@+id/tvDistancia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distancia: 2.3 km"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="@color/teal_700" />
                </LinearLayout>
            </LinearLayout>

            <!-- 🔹 Botones -->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <!-- Botón marcar ubicación -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMarcarUbicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marcar Ubicación"
                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                    android:layout_marginEnd="20dp" />
                <!-- Botón chat -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnChat"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:contentDescription="Abrir chat"
                    android:icon="@drawable/ic_chat"
                    android:iconTint="@color/teal_700" />


            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
